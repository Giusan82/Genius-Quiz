<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.geniusquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chemistry" />

        <LinearLayout
            style="@style/main_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chemist" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/textApp" />
        </LinearLayout>

        <View style="@style/horizontalBar" />

        <LinearLayout
            style="@style/main_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:paddingBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="@string/subTitle"
                    android:textColor="@color/textApp"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                style="@style/questions"
                android:text="@string/question1" />

            <LinearLayout style="@style/answerGroup">

                <CheckBox
                    android:id="@+id/answer1a"
                    style="@style/answers"
                    android:text="@string/answer1a"
                    android:textColorSecondary="@color/textApp" />

                <CheckBox
                    android:id="@+id/answer1b"
                    style="@style/answers"
                    android:text="@string/answer1b" />

                <CheckBox
                    android:id="@+id/answer1c"
                    style="@style/answers"
                    android:text="@string/answer1c" />

                <CheckBox
                    android:id="@+id/answer1d"
                    style="@style/answers"
                    android:text="@string/answer1d" />

                <CheckBox
                    android:id="@+id/answer1e"
                    style="@style/answers"
                    android:text="@string/answer1e" />

                <CheckBox
                    android:id="@+id/answer1f"
                    style="@style/answers"
                    android:text="@string/answer1f" />

                <CheckBox
                    android:id="@+id/answer1g"
                    style="@style/answers"
                    android:text="@string/answer1g" />

                <CheckBox
                    android:id="@+id/answer1h"
                    style="@style/answers"
                    android:text="@string/answer1h" />
            </LinearLayout>

            <TextView
                style="@style/questions"
                android:text="@string/question2" />

            <LinearLayout style="@style/answerGroup">

                <CheckBox
                    android:id="@+id/answer2a"
                    style="@style/answers"
                    android:text="@string/answer2a" />

                <CheckBox
                    android:id="@+id/answer2b"
                    style="@style/answers"
                    android:text="@string/answer2b" />

                <CheckBox
                    android:id="@+id/answer2c"
                    style="@style/answers"
                    android:text="@string/answer2c" />

                <CheckBox
                    android:id="@+id/answer2d"
                    style="@style/answers"
                    android:text="@string/answer2d" />

                <CheckBox
                    android:id="@+id/answer2e"
                    style="@style/answers"
                    android:text="@string/answer2e" />

                <CheckBox
                    android:id="@+id/answer2f"
                    style="@style/answers"
                    android:text="@string/answer2f" />

                <CheckBox
                    android:id="@+id/answer2g"
                    style="@style/answers"
                    android:text="@string/answer2g" />

                <CheckBox
                    android:id="@+id/answer2h"
                    style="@style/answers"
                    android:text="@string/answer2h" />
            </LinearLayout>

            <TextView
                style="@style/questions"
                android:text="@string/question3" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer3a"
                    style="@style/answers"
                    android:text="@string/answer3a" />

                <RadioButton
                    android:id="@+id/answer3b"
                    style="@style/answers"
                    android:text="@string/answer3b" />

                <RadioButton
                    android:id="@+id/answer3c"
                    style="@style/answers"
                    android:text="@string/answer3c" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question4" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer4a"
                    style="@style/answers"
                    android:text="@string/answer4a" />

                <RadioButton
                    android:id="@+id/answer4b"
                    style="@style/answers"
                    android:text="@string/answer4b" />

                <RadioButton
                    android:id="@+id/answer4c"
                    style="@style/answers"
                    android:text="@string/answer4c" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question5" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer5a"
                    style="@style/answers"
                    android:text="@string/answer5a" />

                <RadioButton
                    android:id="@+id/answer5b"
                    style="@style/answers"
                    android:text="@string/answer5b" />

                <RadioButton
                    android:id="@+id/answer5c"
                    style="@style/answers"
                    android:text="@string/answer5c" />

                <RadioButton
                    android:id="@+id/answer5d"
                    style="@style/answers"
                    android:text="@string/answer5d" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question6" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer6a"
                    style="@style/answers"
                    android:text="@string/answer6a" />

                <RadioButton
                    android:id="@+id/answer6b"
                    style="@style/answers"
                    android:text="@string/answer6b" />

                <RadioButton
                    android:id="@+id/answer6c"
                    style="@style/answers"
                    android:text="@string/answer6c" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question7" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer7a"
                    style="@style/answers"
                    android:text="@string/answer7a" />

                <RadioButton
                    android:id="@+id/answer7b"
                    style="@style/answers"
                    android:text="@string/answer7b" />

                <RadioButton
                    android:id="@+id/answer7c"
                    style="@style/answers"
                    android:text="@string/answer7c" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question8" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer8a"
                    style="@style/answers"
                    android:text="@string/answer8a" />

                <RadioButton
                    android:id="@+id/answer8b"
                    style="@style/answers"
                    android:text="@string/answer8b" />

                <RadioButton
                    android:id="@+id/answer8c"
                    style="@style/answers"
                    android:text="@string/answer8c" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question9" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer9a"
                    style="@style/answers"
                    android:text="@string/answer9a" />

                <RadioButton
                    android:id="@+id/answer9b"
                    style="@style/answers"
                    android:text="@string/answer9b" />

                <RadioButton
                    android:id="@+id/answer9c"
                    style="@style/answers"
                    android:text="@string/answer9c" />

                <RadioButton
                    android:id="@+id/answer9d"
                    style="@style/answers"
                    android:text="@string/answer9d" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question10" />

            <RadioGroup style="@style/answerGroup">

                <RadioButton
                    android:id="@+id/answer10a"
                    style="@style/answers"
                    android:text="@string/answer10a" />

                <RadioButton
                    android:id="@+id/answer10b"
                    style="@style/answers"
                    android:text="@string/answer10b" />

                <RadioButton
                    android:id="@+id/answer10c"
                    style="@style/answers"
                    android:text="@string/answer10c" />
            </RadioGroup>

            <TextView
                style="@style/questions"
                android:text="@string/question11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="end"
                    android:text="Na:"
                    android:textColor="@color/textApp" />

                <EditText
                    android:id="@+id/na"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:configChanges="orientation"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="end"
                    android:text="Cu:"
                    android:textColor="@color/textApp" />

                <EditText
                    android:id="@+id/cu"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:configChanges="orientation"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="end"
                    android:text="Hg:"
                    android:textColor="@color/textApp" />

                <EditText
                    android:id="@+id/hg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:configChanges="orientation"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="3" />
            </LinearLayout>

        </LinearLayout>

        <Button
            style="@style/buttons"
            android:layout_marginBottom="8dp"
            android:onClick="submitAnswer"
            android:text="@string/submit" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textColor="@color/textApp"
            android:textStyle="bold" />
    </LinearLayout>


</ScrollView>
